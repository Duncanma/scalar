{
  "name": "@scalar/api-reference-react",
  "description": "The react client only integration for api references",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scalar/scalar.git",
    "directory": "packages/api-reference-react"
  },
  "keywords": [
    "api",
    "client",
    "postman alternative",
    "rest",
    "testing",
    "react"
  ],
  "version": "0.4.31",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "pnpm types:check && pnpm build-only && pnpm build-only-react18",
    "build-only": "vite build",
    "build-only-react18": "vite build --config ./vite.config.react18.ts",
    "lint:check": "eslint .",
    "lint:fix": "eslint .  --fix",
    "playground": "vite ./playground -c ./vite.config.ts",
    "types:check": "tsc --noEmit --skipLibCheck"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react18": {
      "import": "./dist/react18/index.js",
      "types": "./dist/react18/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "module": "./dist/index.js",
  "dependencies": {
    "@scalar/api-reference": "workspace:*"
  },
  "devDependencies": {
    "@scalar/build-tooling": "workspace:*",
    "@scalar/galaxy": "workspace:*",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "character-entities": "^2.0.2",
    "decode-named-character-reference": "^1.0.2",
    "path": "^0.12.7",
    "random-words": "^2.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dom18": "npm:react-dom@^18.2.0",
    "react18": "npm:react@^18.2.0",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vue": "^3.5.12"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  }
}
